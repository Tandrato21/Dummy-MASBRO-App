<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding.Onboarding">

    <TextView
        android:id="@+id/onbTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onboarding"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/onbImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/onbTitleText"
        android:src="@drawable/img_emptyimage"
        />

    <TextView
        android:id="@+id/onbDescription"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="ini teks"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@+id/onbImage"
        />

    <Button
        android:id="@+id/onbNextBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/onbDescription"
        android:text="NEXT"
        />

    <Button
        android:id="@+id/onbSkipBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/onbNextBtn"
        android:text="SKIP"
        />

</RelativeLayout>